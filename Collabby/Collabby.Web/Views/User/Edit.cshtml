@model Collabby.Domain.Entities.User
@{
    ViewData["Title"] = "Editar Usuario";
}
<div class="container py-5">
    <div class="card shadow-lg rounded-4 p-4">
        <h2 class="text-warning fw-bold mb-4"><i class="bi bi-pencil-square me-2"></i>Editar Usuario</h2>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control rounded-3" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control rounded-3" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control rounded-3" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PasswordHash" class="form-label"></label>
                    <input asp-for="PasswordHash" class="form-control rounded-3" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="CreatedAt" class="form-label"></label>
                    <input asp-for="CreatedAt" class="form-control rounded-3" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="UpdatedAt" class="form-label"></label>
                    <input asp-for="UpdatedAt" class="form-control rounded-3" />
                    <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
                <button type="submit" class="btn btn-warning text-white"><i class="bi bi-save"></i> Guardar</button>
            </div>
        </form>
    </div>
</div>