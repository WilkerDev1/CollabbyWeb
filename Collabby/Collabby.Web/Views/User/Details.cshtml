<!-- ==== DETAILS USER ==== -->
@model Collabby.Domain.Entities.User
@{
    ViewData["Title"] = "Detalles de Usuario";
}
<div class="container py-5">
    <div class="card shadow-lg rounded-4 p-4">
        <h2 class="text-info fw-bold mb-4"><i class="bi bi-person-lines-fill me-2"></i>Detalles del Usuario</h2>

        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Contraseña</dt>
            <dd class="col-sm-9">@Model.PasswordHash</dd>

            <dt class="col-sm-3">Creado</dt>
            <dd class="col-sm-9">@Model.CreatedAt</dd>

            <dt class="col-sm-3">Actualizado</dt>
            <dd class="col-sm-9">@Model.UpdatedAt</dd>
        </dl>

        <div class="mt-4 d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
            <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-info text-white"><i class="bi bi-pencil"></i> Editar</a>
        </div>
    </div>
</div>