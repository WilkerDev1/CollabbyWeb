@model Collabby.Domain.Entities.User

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-trash3-fill"></i> Eliminar Usuario</h3>
        </div>
        <div class="card-body p-4">
            <div class="alert alert-warning">
                <strong>Advertencia:</strong> ¿Estás seguro de eliminar este usuario? Esta acción no se puede deshacer.
            </div>

            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Apellido</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Correo</dt>
                <dd class="col-sm-9">@Model.Email</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="UserId" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>