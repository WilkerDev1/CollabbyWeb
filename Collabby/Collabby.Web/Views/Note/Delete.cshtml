@model Collabby.Domain.Entities.Note

@{
    ViewData["Title"] = "Delete Note";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-trash3-fill"></i> Delete Note</h3>
        </div>
        <div class="card-body p-4">
            <div class="alert alert-warning">
                <strong>Warning:</strong> Are you sure you want to delete this note? This action cannot be undone.
            </div>

            <dl class="row">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                <dt class="col-sm-3">Content</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Content)</dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CreatedAt)</dd>

                <dt class="col-sm-3">Updated At</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdatedAt)</dd>

                <dt class="col-sm-3">User</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="NoteId" />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash3"></i> Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
