@{
    ViewData["Title"] = "Inicio";
}

<style>
    /* Estilo para la sección hero */
    .hero-banner {
        background: linear-gradient(135deg, #4a3aff, #865DFF);
        color: white;
        padding: 100px 20px 80px;
        text-align: center;
        position: relative;
        overflow: hidden;
        /* 🔥 Cambios clave para ancho completo */
        width: 100vw;
        margin-left: calc(-50vw + 50%);
    }

        .hero-banner h1 {
            font-size: 3.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .hero-banner p {
            font-size: 1.25rem;
            color: #e0e0ff;
        }

    .hero-divider {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 80px;
        background: url("data:image/svg+xml,%3Csvg viewBox='0 0 1440 80' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill='%23ffffff' d='M0,64L80,58.7C160,53,320,43,480,42.7C640,43,800,53,960,64C1120,75,1280,85,1360,90.7L1440,96L1440,0L1360,0C1280,0,1120,0,960,0C800,0,640,0,480,0C320,0,160,0,80,0L0,0Z'%3E%3C/path%3E%3C/svg%3E") no-repeat bottom;
        background-size: cover;
        z-index: 1;
    }

    .main-content {
        background: #f7f9fc;
        padding-top: 40px;
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding-left: 15px;
        padding-right: 15px;
    }

    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease-in-out;
    }
</style>

<!-- HERO BANNER -->
<section class="hero-banner container-fluid">
    <h1>COLLABBY</h1>
    <p>Organiza tus ideas y colabora de forma sencilla.</p>
    <div class="hero-divider"></div>
</section>

<!-- CONTENIDO PRINCIPAL -->
<div class="main-content">
    <div class="container-xl my-5">
        <!-- Tarjetas de navegación -->
        <div class="row justify-content-center g-4">
            <!-- Tarjeta de Notas -->
            <div class="col-md-4">
                <div class="card border-0 shadow h-100 hover-shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-journal-richtext display-1 text-primary mb-3"></i>
                        <h3 class="card-title">Notas</h3>
                        <p class="card-text">Crea, organiza y accede a tus notas rápidamente.</p>
                        <a asp-controller="Note" asp-action="Index" class="btn btn-primary">
                            Ver Notas <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Tarjeta de Usuarios -->
            <div class="col-md-4">
                <div class="card border-0 shadow h-100 hover-shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-1 text-success mb-3"></i>
                        <h3 class="card-title">Usuarios</h3>
                        <p class="card-text">Gestiona los usuarios de la aplicación.</p>
                        <a asp-controller="User" asp-action="Index" class="btn btn-success">
                            Ver Usuarios <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Tarjeta de Proyectos (NUEVA) -->
            <div class="col-md-4">
                <div class="card border-0 shadow h-100 hover-shadow">
                    <div class="card-body text-center">
                        <i class="bi bi-kanban display-1 text-info mb-3"></i>
                        <h3 class="card-title">Proyectos</h3>
                        <p class="card-text">Gestiona tus proyectos facil y de forma dinamica.</p>
                        <a asp-controller="Project" asp-action="Index" class="btn btn-info text-white">
                            Ver Proyectos <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
